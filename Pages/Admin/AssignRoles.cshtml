@page
@model mini_AMS.Pages.Admin.AssignRolesModel
@{
    ViewData["Title"] = "Assign Roles to Users";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow rounded-3 p-4" style="max-width: 500px; width:100%; border-radius:15px;">
        <h3 class="text-center text-primary fw-bold">Assign Roles to Users</h3>
        <p class="text-center text-muted">Add a role to a user or create common roles with a click</p>
        <hr />
        <!-- Assign Role Form -->
        <form method="post" class="mb-4">
            <div class="mb-3">
                <label for="Email" class="form-label fw-semibold">User Email</label>
                <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="user@example.com" required />
            </div>
            <div class="mb-3">
                <label for="RoleName" class="form-label fw-semibold">Role Name</label>
                <input type="text" asp-for="RoleName" class="form-control form-control-lg" placeholder="Admin, Accountant, Viewer..." required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg rounded-pill">Assign Role</button>
            </div>
        </form>

        <hr />

        <!-- Create Roles Button -->
        <form method="post" asp-page-handler="CreateRoles" class="mb-3">
            <div class="d-grid">
                <button class="btn btn-outline-primary btn-lg rounded-pill" type="submit">
                    ✨ Create Roles (Admin, Accountant, Viewer)
                </button>
            </div>
        </form>

        <!-- Success Message -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success alert-dismissible fade show mt-3 text-center rounded-3" role="alert">
                <i class="bi bi-check-circle-fill"></i> @Model.Message
            </div>
        }
    </div>
</div>
