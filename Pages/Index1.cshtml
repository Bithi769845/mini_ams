@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex flex-column justify-content-center align-items-center text-center" style="min-height:80vh;">
    <div class=" rounded-3 p-5" style="max-width:600px;">
        <h1 class="display-3 fw-bold text-primary">Welcome,</h1>
        <h2 class="display-5 fw-bold text-dark">@User.Identity?.Name!</h2>
        <p class="text-muted mt-3">
            You're now logged in to the <strong>Account Management System</strong>.<br />
            This is your personalized space where you can manage your roles, accounts, and settings.
        </p>
    </div>
</div>
