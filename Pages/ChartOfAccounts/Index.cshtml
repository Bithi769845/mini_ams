@page
@model mini_AMS.Pages.ChartOfAccounts.IndexModel
@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="container mt-4">
    <h2 class="text-primary">Chart of Accounts</h2>
    <a class="btn btn-success my-3" asp-page="Create">Add New Account</a>
    <div class="card p-3 rounded-3 shadow">
        @if (Model.RootAccounts.Any())
        {
            <ul class="list-group">
                @foreach (var account in Model.RootAccounts)
                {
                    @Html.Partial("AccountTreeItem", account)
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No accounts found</p>
        }
    </div>
</div>
