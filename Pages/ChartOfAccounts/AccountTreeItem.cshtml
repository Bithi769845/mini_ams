@model mini_AMS.Models.ChartOfAccount

<li class="list-group-item">
    <div class="d-flex justify-content-between align-items-center">
        <span>@Model.Name</span>
        <div>
            <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
    @if (Model.Children.Any())
    {
        <ul class="list-group list-group-flush ms-3 mt-2">
            @foreach (var child in Model.Children)
            {
                @Html.Partial("AccountTreeItem", child)
            }
        </ul>
    }
</li>
